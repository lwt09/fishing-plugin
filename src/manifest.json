{
  "manifest_version": 3,
  "name": "Image Transparency Toggle",
  "version": "2.0.4",
  "description": "Toggle transparency of images on web pages.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/fish.png",
    "48": "images/fish.png",
    "128": "images/fish.png"
  },
  "commands": {
    "toggle-transparency": {
      "suggested_key": {
        "mac": "Command+B",
        "windows": "Ctrl+B",
        "linux": "Ctrl+B"
      },
      "description": "Toggle image transparency"
    }
  }
}
